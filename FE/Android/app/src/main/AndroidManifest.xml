<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Network permissions for API calls -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Location permissions for auto-fill address -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AgriConnect"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Auth Activities -->
        <activity
            android:name=".ui.auth.RoleSelectionActivity"
            android:exported="false" />

        <activity
            android:name=".ui.auth.CreateAccountActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.auth.VerifyOtpActivity"
            android:exported="false" />

        <activity
            android:name=".ui.auth.EkycUploadActivity"
            android:exported="false" />

        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- Main Navigation - Now LAUNCHER for guest browsing -->
        <activity
            android:name=".ui.main.MainNavigationActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Post Activities -->
        <activity
            android:name=".ui.post.CreatePostActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.post.PostDetailActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- Search Activity -->
        <activity
            android:name=".ui.search.SearchActivity"
            android:exported="false"
            android:windowSoftInputMode="stateVisible|adjustResize" />

        <!-- My Posts Activity -->
        <activity
            android:name=".ui.post.MyPostsActivity"
            android:exported="false" />

        <!-- Profile Activities -->
        <activity
            android:name=".ui.profile.EditProfileActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.profile.StatisticsActivity"
            android:exported="false" />

        <!-- Admin Activities -->
        <activity
            android:name=".ui.admin.AdminMainActivity"
            android:exported="false" />

        <activity
            android:name=".ui.admin.AdminDashboardActivity"
            android:exported="false" />

        <activity
            android:name=".ui.admin.AdminPostsActivity"
            android:exported="false" />

        <activity
            android:name=".ui.admin.AdminUsersActivity"
            android:exported="false" />



        <!-- Keep old MainActivity for reference -->
        <activity
            android:name=".ui.chat.ChatActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <activity
            android:name=".ui.notification.NotificationActivity"
            android:exported="false" />

    </application>

</manifest>