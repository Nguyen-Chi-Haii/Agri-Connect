<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="@dimen/spacing_lg"
    tools:context=".ui.auth.VerifyOtpActivity">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="@dimen/icon_lg"
        android:layout_height="@dimen/icon_lg"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Back"
        android:padding="@dimen/spacing_xs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/text_primary" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xxl"
        android:text="@string/verify_phone"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_xxl"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_sm"
        android:text="@string/otp_sent_to"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/text_body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xs"
        android:textColor="@color/primary"
        android:textSize="@dimen/text_md"
        android:textStyle="bold"
        tools:text="0912 345 678"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle" />

    <!-- OTP Input Container -->
    <LinearLayout
        android:id="@+id/otpContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xl"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPhone">

        <EditText
            android:id="@+id/etOtp1"
            android:layout_width="@dimen/otp_box_size"
            android:layout_height="@dimen/otp_box_size"
            android:layout_marginHorizontal="@dimen/spacing_xs"
            android:background="@drawable/bg_otp_input"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_xl"
            android:textStyle="bold"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/etOtp2"
            android:layout_width="@dimen/otp_box_size"
            android:layout_height="@dimen/otp_box_size"
            android:layout_marginHorizontal="@dimen/spacing_xs"
            android:background="@drawable/bg_otp_input"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_xl"
            android:textStyle="bold"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/etOtp3"
            android:layout_width="@dimen/otp_box_size"
            android:layout_height="@dimen/otp_box_size"
            android:layout_marginHorizontal="@dimen/spacing_xs"
            android:background="@drawable/bg_otp_input"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_xl"
            android:textStyle="bold"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/etOtp4"
            android:layout_width="@dimen/otp_box_size"
            android:layout_height="@dimen/otp_box_size"
            android:layout_marginHorizontal="@dimen/spacing_xs"
            android:background="@drawable/bg_otp_input"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_xl"
            android:textStyle="bold"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/etOtp5"
            android:layout_width="@dimen/otp_box_size"
            android:layout_height="@dimen/otp_box_size"
            android:layout_marginHorizontal="@dimen/spacing_xs"
            android:background="@drawable/bg_otp_input"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_xl"
            android:textStyle="bold"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/etOtp6"
            android:layout_width="@dimen/otp_box_size"
            android:layout_height="@dimen/otp_box_size"
            android:layout_marginHorizontal="@dimen/spacing_xs"
            android:background="@drawable/bg_otp_input"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_xl"
            android:textStyle="bold"
            android:importantForAutofill="no" />
    </LinearLayout>

    <!-- Timer -->
    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lg"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/text_body"
        tools:text="Mã hết hạn sau 02:00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/otpContainer" />

    <!-- Resend Button -->
    <TextView
        android:id="@+id/tvResend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_md"
        android:text="@string/resend_otp"
        android:textColor="@color/primary"
        android:textSize="@dimen/text_body"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTimer" />

    <!-- Verify Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVerify"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:layout_marginBottom="@dimen/spacing_lg"
        android:text="@string/verify"
        android:textAllCaps="false"
        android:textSize="@dimen/text_md"
        android:enabled="false"
        app:cornerRadius="@dimen/radius_lg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Loading -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/btnVerify"
        app:layout_constraintEnd_toEndOf="@id/btnVerify"
        app:layout_constraintStart_toStartOf="@id/btnVerify"
        app:layout_constraintTop_toTopOf="@id/btnVerify" />

</androidx.constraintlayout.widget.ConstraintLayout>
