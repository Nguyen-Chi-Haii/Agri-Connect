<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_md"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="@dimen/radius_lg"
    app:cardElevation="@dimen/elevation_sm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Post Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_md">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivAvatar"
                android:layout_width="@dimen/avatar_md"
                android:layout_height="@dimen/avatar_md"
                android:src="@drawable/ic_profile"
                app:civ_border_color="@color/border"
                app:civ_border_width="1dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_sm"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_body"
                        android:textStyle="bold"
                        tools:text="Nguyễn Văn A" />

                    <ImageView
                        android:id="@+id/ivVerified"
                        android:layout_width="@dimen/icon_sm"
                        android:layout_height="@dimen/icon_sm"
                        android:layout_marginStart="@dimen/spacing_xs"
                        android:src="@drawable/ic_check_circle"
                        android:visibility="gone"
                        app:tint="@color/badge_verified" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvPostTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_sm"
                    tools:text="2 giờ trước" />
            </LinearLayout>

            <ImageView
                android:id="@+id/btnMore"
                android:layout_width="@dimen/icon_md"
                android:layout_height="@dimen/icon_md"
                android:src="@drawable/ic_more"
                app:tint="@color/text_secondary" />
        </LinearLayout>

        <!-- Post Content -->
        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/spacing_md"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_body"
            tools:text="Bán lúa ST25 mới thu hoạch, giá 8.500đ/kg. Số lượng: 10 tấn. Liên hệ: 0912345678" />

        <!-- Post Images (Optional) -->
        <ImageView
            android:id="@+id/ivPostImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/spacing_sm"
            android:scaleType="centerCrop"
            android:visibility="gone"
            tools:src="@color/surface_variant" />

        <!-- Price Badge -->
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_md"
            android:layout_marginTop="@dimen/spacing_sm"
            android:background="@drawable/bg_badge"
            android:backgroundTint="@color/primary_light"
            android:paddingHorizontal="@dimen/spacing_sm"
            android:paddingVertical="@dimen/spacing_xs"
            android:textColor="@color/white"
            android:textSize="@dimen/text_sm"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="8.500đ/kg" />

        <!-- Post Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_md">

            <LinearLayout
                android:id="@+id/btnLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/spacing_xs">

                <ImageView
                    android:id="@+id/ivLike"
                    android:layout_width="@dimen/icon_md"
                    android:layout_height="@dimen/icon_md"
                    android:src="@drawable/ic_like"
                    app:tint="@color/text_secondary" />

                <TextView
                    android:id="@+id/tvLikeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_xs"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_sm"
                    tools:text="24" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lg"
                android:gravity="center_vertical"
                android:padding="@dimen/spacing_xs">

                <ImageView
                    android:layout_width="@dimen/icon_md"
                    android:layout_height="@dimen/icon_md"
                    android:src="@drawable/ic_comment"
                    app:tint="@color/text_secondary" />

                <TextView
                    android:id="@+id/tvCommentCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_xs"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_sm"
                    tools:text="5" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvViews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/text_xs"
                tools:text="120 lượt xem" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
