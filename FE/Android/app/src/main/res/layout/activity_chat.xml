<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/background"
    tools:context=".ui.chat.ChatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/surface"
            android:elevation="@dimen/elevation_sm"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/spacing_md"
            android:paddingVertical="@dimen/spacing_sm">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="@dimen/icon_lg"
                android:layout_height="@dimen/icon_lg"
                android:padding="@dimen/spacing_xs"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/text_primary" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivAvatar"
                android:layout_width="@dimen/avatar_sm"
                android:layout_height="@dimen/avatar_sm"
                android:layout_marginStart="@dimen/spacing_sm"
                android:src="@drawable/ic_profile" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_md"
                android:layout_weight="1"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_md"
                android:textStyle="bold"
                tools:text="Nguyễn Văn A" />
        </LinearLayout>

        <!-- Messages List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMessages"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingVertical="@dimen/spacing_md" />

        <!-- Message Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/surface"
            android:elevation="@dimen/elevation_md"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/spacing_md"
            android:paddingVertical="@dimen/spacing_sm">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_card_rounded"
                android:hint="@string/type_message"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="4"
                android:paddingHorizontal="@dimen/spacing_md"
                android:paddingVertical="@dimen/spacing_sm" />

            <ImageView
                android:id="@+id/btnSend"
                android:layout_width="@dimen/icon_lg"
                android:layout_height="@dimen/icon_lg"
                android:layout_marginStart="@dimen/spacing_sm"
                android:padding="@dimen/spacing_xs"
                android:src="@drawable/ic_send"
                app:tint="@color/primary" />
        </LinearLayout>
    </LinearLayout>

    <!-- Loading -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
